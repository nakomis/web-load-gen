<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
                      http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<parent>
		<groupId>com.yahoo.ycsb</groupId>
		<artifactId>root</artifactId>
		<version>1.0</version>
	</parent>
	<name>memcached</name>
	<groupId>com.yahoo.ycsb</groupId>
	<artifactId>memcached</artifactId>
	<version>1.0</version>
	<modelVersion>4.0.0</modelVersion>
	<packaging>jar</packaging>

    <profiles>
        <profile>
            <id>moxi-1.8-competition-load.workload</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>1.1.1</version>
                        <executions>
                            <execution>
                                <phase>test</phase>
                                <goals>
                                    <goal>java</goal>
                                </goals>
                                <configuration>
                                    <systemProperties>
                                        <systemProperty>
                                            <key>net.spy.log.LoggerImpl</key>
                                            <value>net.spy.memcached.compat.log.Log4JLogger</value>
                                        </systemProperty>
                                    </systemProperties>
                                    <mainClass>com.yahoo.ycsb.Client</mainClass>
                                    <arguments>
										<argument>-P</argument>
										<argument>${basedir}/workloads/competition-load.workload</argument>
										<argument>-load</argument>
										<argument>-s</argument>
									</arguments>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
			<id>moxi-1.8-competition-warmup.workload</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<version>1.1.1</version>
						<executions>
							<execution>
								<phase>test</phase>
								<goals>
									<goal>java</goal>
								</goals>
								<configuration>
                                    <systemProperties>
                                        <systemProperty>
                                            <key>net.spy.log.LoggerImpl</key>
                                            <value>net.spy.memcached.compat.log.Log4JLogger</value>
                                        </systemProperty>
                                    </systemProperties>
									<mainClass>com.yahoo.ycsb.Client</mainClass>
									<arguments>
										<argument>-P</argument>
										<argument>${basedir}/workloads/competition-warmup.workload</argument>
										<argument>-t</argument>
										<argument>-target</argument>  
										<argument>${ycsb.target}</argument>
										<argument>-p</argument>
										<argument>operationcount=${ycsb.operationcount}</argument>
										<argument>-s</argument>
									</arguments>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
        <profile>
			<id>moxi-1.8-competition-access.workload</id>
			<build>
				<plugins>
					<plugin>
						<groupId>org.codehaus.mojo</groupId>
						<artifactId>exec-maven-plugin</artifactId>
						<version>1.1.1</version>
						<executions>
							<execution>
								<phase>test</phase>
								<goals>
									<goal>java</goal>
								</goals>
								<configuration>
                                    <systemProperties>
                                        <systemProperty>
                                            <key>net.spy.log.LoggerImpl</key>
                                            <value>net.spy.memcached.compat.log.Log4JLogger</value>
                                        </systemProperty>
                                    </systemProperties>
									<mainClass>com.yahoo.ycsb.Client</mainClass>
									<arguments>
										<argument>-P</argument>
										<argument>${basedir}/workloads/competition-access.workload</argument>
										<argument>-t</argument>
										<argument>-target</argument>   
										<argument>${ycsb.target}</argument>
										<argument>-p</argument>
										<argument>operationcount=${ycsb.operationcount}</argument>
										<argument>-s</argument>
									</arguments>
								</configuration>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>

	<dependencies>
		<dependency>
			<groupId>com.yahoo.ycsb</groupId>
			<artifactId>core</artifactId>
			<version>1.0</version>
		</dependency>
		<dependency>
			<groupId>org.codehaus.jackson</groupId>
			<artifactId>jackson-mapper-asl</artifactId>
			<version>1.9.3</version>
		</dependency>
        <dependency>
            <groupId>spy</groupId>
            <artifactId>spymemcached</artifactId>
            <version>2.8.0</version>
            <exclusions>
                <exclusion>
                    <groupId>log4j</groupId>
                    <artifactId>log4j</artifactId>
                </exclusion>
            </exclusions>
        </dependency>
	</dependencies>
	<repositories>
		<repository>
			<id>files.couchbase.com</id>
			<url>http://files.couchbase.com/maven2</url>
		</repository>
        <repository>
            <id>repository.jboss.org</id>
            <url>https://repository.jboss.org/nexus/content/groups/public</url>
        </repository>
	</repositories>
</project>
